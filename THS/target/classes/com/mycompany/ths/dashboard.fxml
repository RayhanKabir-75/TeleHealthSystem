<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="560.0" prefWidth="900.0"
            style="-fx-background-color: yellow;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mycompany.ths.controller.DashboardController">

    <children>
        <Text layoutX="30.0" layoutY="55.0"
              style="-fx-font-size:28; -fx-font-weight:bold;"
              text="THS  Telehealth System" />

        <Button layoutX="50.0" layoutY="120.0" prefWidth="180.0" prefHeight="40.0"
                onAction="#openAppointments"
                style="-fx-background-color: black;"
                text="Appointments" textFill="#f6ff00" />

        <Button layoutX="260.0" layoutY="120.0" prefWidth="180.0" prefHeight="40.0"
                onAction="#openNotes"
                style="-fx-background-color: black;"
                text="Notes" textFill="#f6ff00" />

        <Button layoutX="470.0" layoutY="120.0" prefWidth="180.0" prefHeight="40.0"
                onAction="#openProfile"
                style="-fx-background-color: black;"
                text="Profile" textFill="#f6ff00" />

        <Button layoutX="680.0" layoutY="120.0" prefWidth="180.0" prefHeight="40.0"
                onAction="#openVitals"
                style="-fx-background-color: black;"
                text="Vitals" textFill="#f6ff00" />

        <Button layoutX="50.0" layoutY="180.0" prefWidth="180.0" prefHeight="40.0"
                onAction="#openPrescriptions"
                style="-fx-background-color: black;"
                text="Prescriptions" textFill="#f6ff00" />

        <Button layoutX="260.0" layoutY="180.0" prefWidth="180.0" prefHeight="40.0"
                onAction="#openReferrals"
                style="-fx-background-color: black;"
                text="Referrals" textFill="#f6ff00" />

        <Button layoutX="760.0" layoutY="20.0" prefWidth="99.0" prefHeight="40.0"
                onAction="#logout"
                style="-fx-background-color: black;"
                text="Logout" textFill="#f6ff00">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
